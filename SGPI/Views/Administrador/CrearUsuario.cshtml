@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "CrearUsuario";
    Layout = "_LayoutADMON";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1>CREAR USUARIO</h1>
        </div>
        <div class="col">
            <br />
            <a href="/Administrador/Login" style="color:hotpink"><h4 class="text-right">Cerrar sesión</h4></a>
        </div>
    </div>
</div>

<br />
<form method="post">
<section class="login-block">
<div class="container">
    <center>

<div class="row">
    <div class="col-sm-4 justify-content-md-center align-items-center ">
        <br />
        <h5> TIPO DE DOC </h5>
        @Html.DropDownList("IdDoc", new SelectList(ViewBag.documento, "IdDoc", "TipoDocumento"), new{@class="form-control dropdown"})

        <!--
         <select class="form-control col-sm-10" aria-label="Default select example">
                    <option> Cédula de ciudadanía </option>
                    <option> Documento extranjería </option>
                    <option> Tarjeta de identidad </option>
                    <option> Nit </option>
                    <option> Pasaporte </option>
         </select>
        -->
       
    </div>
    <br />

    <div class="col-sm-4 justify-content-md-center align-items-center">
            <br />
            <h5> NÚM DE DOC </h5>
            <div class="col ">
                <input asp-for="NumeroDocumento" type="text" class="form-control col-sm-10" id="Documentotxt" placeholder="Número de documento">
            </div>
    </div>

    <div class="col-sm-4 justify-content-md-center align-items-center">
            <br />
            <h5> GÉNERO </h5>
            @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "Genero1"), new{@class="form-control dropdown"})

            <!--
           <div class="col ">
                        <select class="form-control col-sm-10" aria-label="Default select example">
                            <option selected> Masculino </option>
                            <option> Femenino </option>
                            <option> Otro </option>
                        </select>
                    </div>
            -->
    </div>
    <br />
    <br />
    <br />
    </div>
    <br />

    <div class="row">
        <div class="col-sm-4 justify-content-md-center align-items-center">
            <h5> PRIMER NOMBRE </h5>
            <div class="col">
                <input asp-for="PrimerNombre" type="text" class="form-control col-sm-10" id="Nombretxt" placeholder="Ingrese su nombre">
            </div>
        </div>
    <br />

        <div class="col-sm-4 justify-content-md-center align-items-center">
            <h5> SEGUNDO NOMBRE </h5>
            <div class="col">
                <input asp-for="SegundoNombre" type="text" class="form-control col-sm-10" id="Nombretxt" placeholder="Ingrese su nombre">
            </div>
        </div>
    <br />

        <div class="col-sm-4 justify-content-md-center align-items-center h-100">
            <h5> PRIMER APELLIDO </h5>
            <div class="col ">
                <input asp-for="PrimerApellido" type="text" class="form-control col-sm-10" id="Apellido1txt" placeholder="Ingrese su primer apellido">
            </div>
         </div>
    </div>
    
    <br />

   <div class="row">
        <div class="col col-sm-4 justify-content-md-center align-items-center h-100">
            <h5> SEGUNDO APELLIDO</h5>
            <div class="col ">
                <input asp-for="SegundoApellido" type="text" class="form-control col-sm-10" id="Apellido2" placeholder="Ingrese su segundo apellido">
            </div>
        </div>

    <br />
    <br />
        <div class="col-sm-4 justify-content-md-center align-items-center h-100">
            <h5> CONTRASEÑA</h5>
            <div class="col ">
                <input asp-for="Password" type="password" class="form-control col-sm-10" id="Apellido2" placeholder="Ingrese su contraseña">
            </div>
         </div>

         <div class="col-sm-4 justify-content-md-center align-items-center h-100">
            <h5> EMAIL </h5>
            <div class="col ">
                <input asp-for="Email" type="email" class="form-control col-sm-10" id="Correotxt" placeholder="Ingrese su correo">
            </div>
        </div>
   </div>

    <br />

<div class="row">
    <div class="col-sm-6 justify-content-md-center align-items-center ">
        <h5> ROL </h5>
         @Html.DropDownList("IdRol", new SelectList(ViewBag.rol, "IdRol", "Rol1"), new{@class="form-control dropdown"})

        <!--
            <select class="form-control col-sm-10" aria-label="Default select example">
                        <option> Administrador </option>
                        <option> Coordinador </option>
                        <option> Estudiante </option>
            </select>
        -->
        
    </div>

    <div class="col-sm-6 justify-content-md-center align-items-center ">
        <h5> PROGRAMAS </h5>
         @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "Programa1"), new{@class="form-control dropdown"})

        <!--
            <select class="form-control col-sm-10" aria-label="Default select example">
                        <option> Maestría en Gestión de la Información </option>
                        <option> Especialización en Seguridad de la Información </option>
                        <option> Maestría en Medio Ambiente </option>
            </select>
        -->
        
    </div>
</div>
<br />
<br />
        </center>

    @if (ViewBag.mensaje != null)
   {
       <div class="alert-success" role="alert">
           @ViewBag.mensaje
       </div>
   }
   <br />
    <div class="col-lg-6 offset-lg-5">
        <button type="submit" class="btn" style="background-color:coral">Crear Usuario</button>
    </div>

    <br />
    </div>}
  
</section>
 </form>

